<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondobn"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:background="@drawable/fondobn"
    tools:context="com.bignerdranch.android.sevici.MainActivity">

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButton"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/iconoestaciones" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="41dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/iconofavorito" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignLeft="@+id/Favoritos"
        android:layout_alignStart="@+id/Favoritos"
        android:layout_below="@+id/Favoritos"
        android:layout_marginTop="23dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/iconoruta" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_above="@+id/TwitterInformación"
        android:layout_alignLeft="@+id/MapaEstaciones"
        android:layout_alignStart="@+id/MapaEstaciones"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/iconotwitter" />

    <TextView
        android:id="@+id/Favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/MapaEstaciones"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_below="@+id/imageButton"
        android:text="Estaciones favoritas"
        android:textAlignment="center"
        android:textColor="@color/BLANCO"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TwitterInformación"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_below="@+id/imageButton4"
        android:text="Twitter información"
        android:textAlignment="center"
        android:textColor="@color/BLANCO"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Rutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageButton4"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignRight="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_below="@+id/imageButton4"
        android:text="Cacular ruta"
        android:textAlignment="center"
        android:textColor="@color/BLANCO"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/MapaEstaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_below="@+id/imageButton3"
        android:text="Mapa estaciones"
        android:textAlignment="center"
        android:textColor="@color/BLANCO"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignRight="@+id/imageButton3"
        android:layout_alignEnd="@+id/imageButton3" />

</RelativeLayout>
