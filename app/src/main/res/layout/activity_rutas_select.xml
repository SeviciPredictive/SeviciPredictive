    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rutamapas"
        tools:background="@drawable/rutamapas">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="41dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CALCULAR RUTA"
            android:text="CALCULAR RUTA"
            android:layout_below="@+id/spinner2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp" />

            <Button
                android:id="@+id/btnSubmit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="AÑADIR A FAVORITOS"
                android:text="AÑADIR A FAVORITOS"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/btnSubmit"
                android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView3"
            style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione estación de destino:"
            android:textSize="21dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginTop="57dp"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione estación de origen:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="21dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSubmit1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="@string/ver_favoritas" />

    </RelativeLayout>